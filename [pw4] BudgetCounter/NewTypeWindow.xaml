<Window x:Class="Budget.NewTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budget"
        mc:Ignorable="d"
        Title="New Type creating" Height="150" Width="500" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Color="DimGray"/>
    </Window.Background>
    <Grid>
        <Label x:Name="Type" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Content="Create a new type" FontWeight="UltraLight" FontSize="34"  HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Border Opacity="0.7" BorderBrush="LightPink" BorderThickness="3" CornerRadius="20,80,50,50" VerticalAlignment="Bottom" Margin="0,0,0,7" HorizontalAlignment="Left" Width="332">
            <TextBox x:Name="newTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="" Foreground="White" FontWeight="Black" FontSize="34" Width="312"/>
        </Border>
        <Button
         Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}" Content="Save" Click="Save_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="55" Width="142" Margin="0,0,3,6"/>
    </Grid>
</Window>
