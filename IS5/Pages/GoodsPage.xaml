<Page x:Class="IS5.GoodsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IS5"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GoodsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*" />
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="goodsDG" Grid.RowSpan="3" IsReadOnly="True" Background="Transparent" Foreground="#fff" FontFamily="Stencil" SelectionChanged="goodsDG_SelectionChanged"/>
        <Label Content="Data to fill" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32px" FontFamily="Stencil" Foreground="#fff" Grid.Column="1" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
            <TextBox x:Name="nameTB" materialDesign:HintAssist.Hint="Name" Height="33px" TextWrapping="NoWrap" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent" Margin="0 10 0 0"/>
            <TextBox x:Name="amountTB" materialDesign:HintAssist.Hint="Amount" Height="33px" TextWrapping="NoWrap" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
            <TextBox x:Name="priceTB" materialDesign:HintAssist.Hint="Price per one" Height="33px" TextWrapping="NoWrap" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
            <ComboBox x:Name="typeCMB" Height="30px" materialDesign:HintAssist.Hint="Type" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
            <ComboBox x:Name="tierCMB" Height="30px" materialDesign:HintAssist.Hint="Tier" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
            <ComboBox x:Name="realtorCMB" Height="30px" materialDesign:HintAssist.Hint="Realtor" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
            <ComboBox x:Name="builderCMB" Height="30px" materialDesign:HintAssist.Hint="Builder" FontSize="20px" FontFamily="Arial Black" Foreground="#fff" Background="Transparent"/>
        </StackPanel>
        <Button Content="Import data"  Grid.Row="2" FontSize="24px" Background="Transparent" FontFamily="Stencil" Foreground="#fff" Click="ImportData_Btn_Click"/>
        <Button Content="Add" Grid.Row="5" Grid.Column="1" FontSize="24px" Background="Transparent" FontFamily="Stencil" Foreground="#fff" Click="Add_Btn_Click"/>
        <Button Content="Edit" Grid.Column="2" Grid.Row="5" FontSize="24px" Background="Transparent" FontFamily="Stencil" Foreground="#fff" Click="Edit_Btn_Click"/>
        <Button Content="Remove" Grid.Column="3" Grid.Row="5" FontSize="24px" Background="Transparent" FontFamily="Stencil" Foreground="#fff" Click="Remove_Btn_Click"/>

    </Grid>
</Page>
