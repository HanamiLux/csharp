<Page x:Class="GamingCalendar.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamingCalendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBox" HorizontalContentAlignment="Left" Grid.Column="1" Grid.RowSpan="5"/>
        <Button Grid.Row="1" Content="SAVE AND EXIT" FontSize="30px" MinHeight="50" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" Foreground="#fff" Click="Button_Click"  />
    </Grid>
</Page>
