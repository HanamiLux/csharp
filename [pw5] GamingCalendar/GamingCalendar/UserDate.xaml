<UserControl x:Class="GamingCalendar.UserDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamingCalendar"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>

        <Button x:Name="dayModel" Foreground="#fff" Content="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  FontSize="60px" Height="80px" Width="80px" FontFamily="Bahnschrift SemiBold Condensed" Click="dayModel_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/sakura.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
