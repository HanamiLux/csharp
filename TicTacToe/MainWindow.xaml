        <Button x:Name="Button9" Margin="412,280,288,53" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Label x:Name="Turn" Content="Turn: " HorizontalAlignment="Left" Margin="595,30,0,0" VerticalAlignment="Top" Height="59" Width="195" FontSize="48" FontFamily="Stencil"/>
        <Button x:Name="RestartButton" Content="Re/start" HorizontalAlignment="Left" Margin="592,248,0,0" VerticalAlignment="Top" Height="121" Width="192" FontFamily="Stencil" FontSize="36" RenderTransformOrigin="0.5,0.5" Click="Button_Click_Restart">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.533"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="Winner" HorizontalAlignment="Left" Margin="236,19,0,0" VerticalAlignment="Top" Height="59" Width="359" FontSize="48" FontFamily="Stencil"/>

    </Grid>
