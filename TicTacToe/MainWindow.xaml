        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button2" Content="" Margin="312,78,388,255" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Button x:Name="Button1" Content="" Margin="212,78,488,255" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Button x:Name="Button3" Content="" Margin="412,78,288,255" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Button x:Name="Button5" Content="" Margin="312,179,388,154" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Button x:Name="Button4" Content="" Margin="212,179,488,154" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
        <Button x:Name="Button6" Content="" Margin="412,179,288,154" FontSize="48" FontFamily="Snap ITC" Width="100" Height="100.7" Click="Button_Click"/>
